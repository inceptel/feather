{
  "admin": {
    "listen": "localhost:2020"
  },
  "apps": {
    "http": {
      "servers": {
        "main": {
          "listen": [":443"],
          "routes": [
            {
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "@id": "work_upstream",
                  "upstreams": [
                    {"dial": "127.0.0.1:8080"}
                  ],
                  "flush_interval": -1,
                  "transport": {
                    "protocol": "http",
                    "read_buffer_size": 4096
                  }
                }
              ]
            }
          ]
        },
        "http_redirect": {
          "listen": [":80"],
          "routes": [
            {
              "handle": [
                {
                  "handler": "static_response",
                  "headers": {
                    "Location": ["https://{http.request.host}{http.request.uri}"]
                  },
                  "status_code": 301
                }
              ]
            }
          ]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          {
            "issuers": [
              {
                "module": "acme",
                "email": "ACME_EMAIL_PLACEHOLDER"
              }
            ]
          }
        ]
      }
    }
  }
}
